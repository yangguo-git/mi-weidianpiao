.footer{
  background: #efeff3;
  /* margin-top: 30rpx; */
  overflow: hidden;
}
.phone-input{
  width: 300rpx;
}
.align{
  align-items: center;
  width: 520rpx;
  justify-content: space-between;
}
.get-phone-btn{
  /* width: 100rpx; */
  /* height: 100rpx; */
  font-size: 30rpx;
  padding:0 10rpx!important;
  margin: 0!important;
  line-height: 2;
}
.licence{
  position: absolute;
  width: 86rpx;
  height: auto;
  top: 50rpx;
  right: 40rpx;
  background: #fff;
  z-index: 996;
  opacity: 1;
}
