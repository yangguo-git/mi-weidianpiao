/* components/company/company.wxss */
.contain{
  /* margin:0 16rpx; */
  border-bottom-left-radius: 19rpx;
  border-bottom-right-radius: 19rpx;
  position: relative;
}
.company-item{
  font-size: 32rpx;
  color: #000;
  margin: 0rpx 30rpx;
  padding: 24rpx 0rpx;
  /* margin: 16rpx; */
  align-items: center;
  border-bottom: 1px solid #ededed;
}
.company-label{
  width: 140rpx;
  color: #000;
  height: 50rpx;
  /* text-align-last: justify; */
  padding-right: 36rpx;
  align-items: center;
  display: inline-block;
  text-align: justify;
  /* vertical-align: middle; */
  line-height: 50rpx;
}

.company-label text {
   display: inline-block;
   height: 0;
   width: 100%  /* 换行 */
}

.input{
  width: 520rpx;
}
.name-input{
  width: 380rpx;
}
.company-name{
  width: 530rpx;
  margin-right: 0;
}
.icon-font{
  text-align: center;
  margin: 0 auto;
  font-weight: bold;
  font-size: 40rpx;
  color: #ccc;
}
.font-zoom{
  width: 100%;
  text-align: center;
  /* border-bottom: 1px solid #d8d8d8; */
  padding: 24rpx 0;
}
