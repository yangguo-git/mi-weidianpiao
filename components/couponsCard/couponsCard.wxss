.card-content {
  width: 690rpx;
  box-shadow: 0rpx 3rpx 8rpx 0rpx rgba(13, 13, 13, 0.07);
  margin: 0 auto 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  letter-spacing: 0rpx;
  position:relative;
}
.card-text {
  margin-left: 33rpx;
  display:flex;
  justify-content: center;
  flex-direction: column;
}
.card-store {
  font-size: 28rpx;
}
.card-company{
  font-size: 20rpx;
	letter-spacing: 0rpx;
	color: #3e3e3e;
  margin-top:10rpx;
}
.card-type {
  margin-top:5rpx;
   margin-bottom:15rpx;
}
.card-type text {
  padding: 3rpx 11rpx;
  font-size: 24rpx;
  color: #09bb07;
  border-radius: 4rpx;
  border: solid 1rpx #09bb07;
}
.card-between-time {
  font-size: 20rpx;
  color: #aeaeae;
}
.card-use {
  height:196rpx;
  line-height: 196rpx;
  color: #efeff3;
  width:242rpx;
  text-align:center;
  position:absolute;
  right:0;
}
/* .card-use text:nth-child(1) {
