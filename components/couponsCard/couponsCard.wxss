} */
.card-use .noCardUseSub{
  font-size: 70rpx;
}
.card-use .hasCardUseSub{
  font-size: 80rpx;
}
.card-use text:nth-child(2) {
  font-size: 28rpx;
  padding-left:10rpx;
}
.card-bg-color{
  height:196rpx;
