.search{
  width:690rpx;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin:57rpx auto 55rpx;
}
.search-box input{
  line-height: 70rpx;
  font-size:28rpx;
	width: 545rpx;
	height: 70rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  margin-right:6rpx;
  box-shadow: 0rpx 3rpx 8rpx 0rpx 
		rgba(13, 13, 13, 0.07);
    padding:0rpx 20rpx;
    box-sizing: border-box;
}
.search-btn button{
	width: 138rpx;
	height: 70rpx;
	background-color: #0ba409;
	border-radius: 10rpx;
  font-size: 28rpx;
	line-height: 70rpx;
	letter-spacing: 2rpx;
	color: #ffffff;
}